  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^23.3.2",
    "@types/joi": "^13.4.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.31",
    "@types/koa-static": "^4.0.0",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.7.1",
    "@types/pg": "^7.4.10",
    "@types/socket.io": "^1.4.37",
    "@types/supertest": "^2.0.5",
    "awesome-typescript-loader": "^5.2.0",
    "jest": "^23.5.0",
    "source-map-loader": "^0.2.4",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "tsc-watch": "^1.0.26",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.10",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "socket.io": "^2.1.1",
    "typeorm": "^0.2.7"
  },
  "jest": {
    "transform": {
      "^.+\\.(tsx|ts)?$": "ts-jest"
    },
    "collectCoverage": true,
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?|ts?|js?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/DOC/",
      "/node_modules/",
      "/build/",
      "/.prettierrc.js",
      "/package-lock.json",
      "/package.json",
      "/webpack.config.js"
    ]
  }
}
